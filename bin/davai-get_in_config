#!/usr/bin/env python3
# -*- coding:Utf-8 -*-
"""
Get a variable from general/user config
"""
from __future__ import print_function, absolute_import, unicode_literals, division

import os
import sys
import argparse
# Automatically set the python path
package_path = os.path.dirname(os.path.dirname(os.path.realpath(__file__)))
sys.path.insert(0, package_path)

from davai_api.api import get_in_config


if __name__ == '__main__':
    parser = argparse.ArgumentParser(description='Get a variable from general/user config')
    parser.add_argument('section')
    parser.add_argument('variable')
    args = parser.parse_args()
    print(get_in_config(args.section, args.variable))

